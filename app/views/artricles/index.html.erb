<p id="notice"><%= notice %></p>

<h1>Artricles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artricles.each do |artricle| %>
      <tr>
        <td><%= artricle.title %></td>
        <td><%= artricle.author %></td>
        <td><%= artricle.text %></td>
        <td><%= link_to 'Show', artricle %></td>
        <td><%= link_to 'Edit', edit_artricle_path(artricle) %></td>
        <td><%= link_to 'Destroy', artricle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

